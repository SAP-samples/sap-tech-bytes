{
    "compilerOptions": {
        "target": "es2015",
        "module": "es2015",
        "moduleResolution": "Node",
        "skipLibCheck": true,
        "preserveConstEnums": true,
        "sourceMap": false,
        "allowJs": true,
        "strict": true,
        "strictNullChecks": false,
        "strictPropertyInitialization": false,
        "rootDir": "./src",
        "outDir": "./dist",
        "baseUrl": "./",
        "typeRoots": [
            "./node_modules/@types",
            "./node_modules/@openui5/ts-types-esm"
        ],
        "paths": {
            "sap/ui/demo/*": [
                "./src/*"
            ]
        }
    },
    "include": [
        "./src/**/*"
    ]
}